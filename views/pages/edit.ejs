<%layout("./layouts/boilerplate.ejs")-%>
<div class="row cols-12 offset-1 mt-3">
  <h3><%=course.CourseName%></h3>
  <br />
  <h4><%=chapter.ChapterName%></h4>
  <hr />
  <div class="col-12">
    <form
      action="/courses/<%=course.id%>/chapters/<%=chapter.id%>/Pages/<%=page.id%>?_method=PUT"
      method="post"
      class="editor-form"
    >
      <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
      <div class="mt-2">
        <label for="PageName" class="form-label fs-5 fw-medium"
          >Edit Title of the Page</label
        >
        <input
          type="text"
          name="PageName"
          value="<%=page.PageName%>"
          class="form-control fs-6"
        />
      </div>
      <div class="mt-2">
        <label for="Content" class="form-label fs-5 fw-medium">Content</label>
        <br />
        <div id="editor" style="height: 300px" class="fs-6">
          <%-page.Content%>
        </div>
        <input type="hidden" id="editorInput" name="Content" />
      </div>
      <div class="mt-3 mb-5 text-center justify-content-center">
        <button class="btn btn-warning">Edit</button>
      </div>
    </form>
  </div>
</div>
<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
<script src="/js/script.js"></script>
